# This is the default ansible 'hosts' file.
#
# It should live in /etc/ansible/hosts
#
#   - Comments begin with the '#' character
#   - Blank lines are ignored
#   - Groups of hosts are delimited by [header] elements
#   - You can enter hostnames or ip addresses
#   - A hostname/ip can be a member of multiple groups

# Ex 1: Ungrouped hosts, specify before any group headers.

## green.example.com
## blue.example.com
## 192.168.100.1
## 192.168.100.10

# Ex 2: A collection of hosts belonging to the 'webservers' group

[neo4jservers]
vm1 ansible_host=ag-20201029-vm1.eastus.cloudapp.azure.com
vm2 ansible_host=ag-20201029-vm2.eastus.cloudapp.azure.com
vm3 ansible_host=ag-20201029-vm3.eastus.cloudapp.azure.com
vm4 ansible_host=ag-20201029-vm4.eastus.cloudapp.azure.com
vm5 ansible_host=ag-20201029-vm5.eastus.cloudapp.azure.com

[neo4jcoreservers]
vm1 ansible_host=ag-20201029-vm1.eastus.cloudapp.azure.com
vm2 ansible_host=ag-20201029-vm2.eastus.cloudapp.azure.com
vm3 ansible_host=ag-20201029-vm3.eastus.cloudapp.azure.com
vm4 ansible_host=ag-20201029-vm4.eastus.cloudapp.azure.com
vm5 ansible_host=ag-20201029-vm5.eastus.cloudapp.azure.com

[neo4jreadservers]
vm1 ansible_host=ag-20201029-vm7.eastus.cloudapp.azure.com

[neo4jaddoncoreservers]
vm1 ansible_host=ag-20201029-vm6.eastus.cloudapp.azure.com


[all:vars]
ansible_python_interpreter=/usr/bin/python3
ansible_user=atin
ansible_ssh_private_key_file = ~/.ssh/neo4j_id_rsa
ansible_connection=ssh
ansible_port=22

# If you have multiple hosts following a pattern you can specify
# them like this:

## www[001:006].example.com

# Ex 3: A collection of database servers in the 'dbservers' group

## [dbservers]
## 
## db01.intranet.mydomain.net
## db02.intranet.mydomain.net
## 10.25.1.56
## 10.25.1.57

# Here's another example of host ranges, this time there are no
# leading 0s:

## db-[99:101]-node.example.com

